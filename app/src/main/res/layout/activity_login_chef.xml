<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/midorichef_logo" />

    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="#3b747474"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="No.Telepon"
                android:maxLines="1"
                android:textSize="16sp"
                android:inputType="number"
                app:met_autoValidate="true"
                app:met_baseColor="@color/colorGreen"
                app:met_clearButton="true"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAnimating="true"
                app:met_floatingLabelText="No.Telepon"
                app:met_primaryColor="@color/colorBlack"
                app:met_textColor="@color/colorBlack"
                app:met_textColorHint="@color/colorWhite"
                app:met_underlineColor="@color/colorGreen"
                app:met_iconPadding="8dp"
                app:met_iconLeft="@drawable/ic_person_outline_white_24dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="Kata Sandi"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="16sp"
                app:met_baseColor="@color/colorGreen"
                app:met_clearButton="true"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAnimating="true"
                app:met_floatingLabelText="Kata Sandi"
                app:met_primaryColor="@color/colorBlack"
                app:met_textColor="@color/colorBlack"
                app:met_textColorHint="@color/colorWhite"
                app:met_underlineColor="@color/colorGreen"
                app:met_iconPadding="8dp"
                app:met_iconLeft="@drawable/ic_lock_outline_white_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingTop="24dp"
                android:text="Belum mendaftar ?"/>

            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingTop="4dp"
                fontPath="@string/GothamRndMedium"
                android:text="Silahkan mendaftar sebagai chef"/>
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        app:backgroundTint="@color/colorWhite"
        android:src="@drawable/ic_login_arrow"
        android:scaleType="center"
        app:fabSize="normal"/>


</RelativeLayout>