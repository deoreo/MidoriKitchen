<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/avatar_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout_placeholder"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_border_left_menu_item">

                    <ImageView
                        android:id="@+id/iv_placeholder"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_restaurant" />

                </RelativeLayout>
<RelativeLayout
    android:layout_width="130dp"
    android:layout_height="150dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rv_resep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        card_view:riv_corner_radius_bottom_left="15dp"
        card_view:riv_corner_radius_top_left="15dp" />

</RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/triangle_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/avatar_layout"
                android:layout_alignRight="@+id/avatar_layout"
                android:background="@drawable/triangle_left" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_layout">

            <RelativeLayout
                android:id="@+id/border_right"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/rounded_border_right_menu_item" />

            <RelativeLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/border_right"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/border_right"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_resep"
                    fontPath="@string/GothamRndBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:text="Nama Resep"
                    android:textColor="@color/colorGreen"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/perkiraan_harga_title"
                    fontPath="@string/GothamRndBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/tv_resep"
                    android:text="Harga di Bukalapak :"
                    android:textColor="@color/colorBlackGrey"
                    android:textSize="12sp"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/tv_price"
                    fontPath="@string/GothamRndBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/perkiraan_harga_title"
                    android:text="Rp 20000 - Rp 100000"
                    android:textColor="@color/colorBlackGrey"
                    android:textSize="14sp"
                    android:layout_alignParentStart="true" />








            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>