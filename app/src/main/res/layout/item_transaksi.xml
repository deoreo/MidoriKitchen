<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardView="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    cardView:cardElevation="2dp"
    android:id="@+id/cardview"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="150dp"
                android:layout_height="135dp"
                android:src="@drawable/pic2"
                android:scaleType="fitXY"
                android:transitionName="img"/>
            <LinearLayout
                android:id="@+id/diagonal"
                android:layout_width="80dp"
                android:layout_height="134dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="-15dp"
                android:background="@drawable/item_menu_shape"
                android:orientation="vertical" />
            <LinearLayout
                android:id="@+id/diagonal2"
                android:layout_width="85dp"
                android:layout_height="135dp"
                android:layout_marginLeft="65dp"
                android:background="@drawable/item_menu_shape"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:layout_toRightOf="@+id/image">

                <TextView
                    android:id="@+id/menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:text="Nasi Pecel "
                    android:textStyle="bold"
                    android:textColor="@color/colorGreen"
                    fontPath="fonts/GothamRnd-Bold.otf"
                    android:paddingTop="8dp"
                    android:transitionName="title"/>

                <TextView
                    android:id="@+id/jumlah_pesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="13sp"
                    android:text="Jumlah Pesan : 5"
                    android:transitionName="order"/>

                <TextView
                    android:id="@+id/harga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="13sp"
                    android:text="Harga : Rp. 5.000,00"
                    android:transitionName="harga"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorDarkGrey"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="13sp"
                    android:text="Status : CONFIRM PAYMENT" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>