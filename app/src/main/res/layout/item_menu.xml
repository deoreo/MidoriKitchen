<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    cardView:cardElevation="2dp"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="135dp"
            android:scaleType="fitXY"
            android:src="@drawable/pic2"
            android:transitionName="img"/>

        <LinearLayout
            android:id="@+id/diagonal"
            android:layout_width="80dp"
            android:layout_height="134dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-15dp"
            android:background="@drawable/item_menu_shape"
            android:orientation="vertical" />
        <LinearLayout
            android:id="@+id/diagonal2"
            android:layout_width="85dp"
            android:layout_height="135dp"
            android:layout_marginLeft="65dp"
            android:background="@drawable/item_menu_shape"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/diagonal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menu"
                fontPath="fonts/GothamRnd-Bold.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Tela"
                android:textSize="18sp"
                android:textColor="@color/colorGreen"
                android:transitionName="menu"/>

            <TextView
                android:id="@+id/jumlah_pesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:paddingTop="8dp"
                android:text="Jumlah Pesanan : 4"
                android:textSize="12sp"
                android:visibility="gone"
                android:transitionName="order"/>

            <TextView
                android:id="@+id/delivery1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:paddingTop="8dp"
                fontPath="fonts/GothamRnd-Bold.otf"
                android:textColor="@color/colorBlack"
                android:text="Pengiriman"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:paddingTop="4dp"
                android:text="Kamis 25 Mei 2017"
                android:textSize="14sp"
                android:transitionName="delivery" />

            <TextView
                android:id="@+id/stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:paddingTop="8dp"
                android:text="Stock Makanan : 4"
                android:textSize="14sp"
                android:transitionName="stock" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>