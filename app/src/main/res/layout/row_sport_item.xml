<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/avatar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@color/colorGreen">

                </RelativeLayout>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/rv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:visibility="invisible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/background_item_sport_detail"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">

                    <!--<com.makeramen.roundedimageview.RoundedImageView-->
                        <!--android:id="@+id/rv_avatar_condektur"-->
                        <!--android:layout_width="40dp"-->
                        <!--android:layout_height="40dp"-->
                        <!--android:layout_alignParentLeft="true"-->
                        <!--android:layout_marginLeft="20dp"-->
                        <!--android:layout_marginTop="20dp"-->
                        <!--card_view:riv_corner_radius="15dp"-->
                        <!--android:background="@drawable/seekbar_slector_green"-->
                        <!--android:scaleType="centerCrop" />-->
                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingLeft="15dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"
                        android:background="@drawable/round_profile_points"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/tv_price"
                            android:textColor="@color/white"
                            android:text="Rp.2.600.000"
                            android:textSize="17sp"
                            fontPath="@string/GothamRndMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />
                        </RelativeLayout>>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/title_sport"
                            fontPath="@string/GothamRndBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Haloo Gym Malang"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_alignParentTop="true"
                            />

                        <TextView
                            android:id="@+id/address_sport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_sport"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Jl Sudirman ,Araya,Malang"
                            android:textColor="@color/colorGrey"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/challenge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/address_sport"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Chalenge : 29"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>