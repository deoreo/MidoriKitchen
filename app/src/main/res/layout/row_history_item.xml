<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_background_buy"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_menu"
            fontPath="@string/GothamRndBold"
            android:layout_toLeftOf="@+id/layout_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="Pecel Bu Iin"
            android:textColor="@color/colorGreen"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_menu"
            android:layout_marginBottom="5dp"
            android:ellipsize="marquee"
            android:maxLines="3"
            android:text="Order Time :"
            android:textColor="@color/colorDarkGrey2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delivery"
            android:layout_marginBottom="5dp"
            android:ellipsize="marquee"
            android:maxLines="3"
            android:text="Senin, 27 Maret 2017"
            android:textColor="@color/colorDarkGrey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_price"
            fontPath="@string/GothamRndMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_gravity="center"
            android:text="Rp. 10000"
            android:textColor="@color/colorDarkGrey"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layout_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_bg_transparent"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_status"
                fontPath="@string/GothamRndMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cooking"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>