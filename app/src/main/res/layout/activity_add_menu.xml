<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardView="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rootLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/back_button_circle_bg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Menu"
                android:textColor="@color/colorGreen"
                android:textSize="18sp"
                android:layout_marginRight="40dp"
                android:gravity="center"
                fontPath="fonts/GothamRnd-Bold.otf" />


        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_below="@+id/toolbar">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no_image_gallery" />

            <TextView
                android:id="@+id/tambahfoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tambah Foto" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_layout"
            android:layout_margin="16dp"
            android:background="@color/colorWhite"
            cardView:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:padding="8dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama menu"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Nama menu"
                    app:met_iconLeft="@drawable/fooddatabase_icon"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deskripsi"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Deskripsi"
                    app:met_minCharacters="30"
                    app:met_iconLeft="@drawable/ic_description_white_24dp"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Harga"
                    android:inputType="number"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Harga"
                    app:met_iconLeft="@drawable/ic_price"/>
                <com.rengwuxian.materialedittext.MaterialEditText

                    android:id="@+id/etStock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Stock"
                    android:inputType="number"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Stock"
                    app:met_iconLeft="@drawable/ic_price"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Delivery"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Delivery"
                    android:focusable="false"
                    android:visibility="gone"
                    app:met_iconLeft="@drawable/ic_today_white_24dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.5"
                android:background="@color/colorGreen"
                android:text="Submit"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btnDecline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.5"
                android:background="@color/colorRed"
                android:text="Batal"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>