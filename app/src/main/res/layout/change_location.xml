<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_below="@+id/layoutfillForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <fragment
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/mapView"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:mapType="normal"
            map:uiCompass="true"
            />

        <RelativeLayout
            android:id="@+id/wrapperSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/colorGreen"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/btnSimpan"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Simpan"
                    android:textSize="18dp"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    fontPath="@string/GothamRndBold"
                    />
                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-8dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/next_white" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutfillForm"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@drawable/bg_white_transparent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back"/>
                <TextView
                    android:id="@+id/txtLocation"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lokasi"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorGreen"
                    android:textAllCaps="true"
                    fontPath="@string/GothamRndBold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/btnBack" />
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/bg_white_transparent"
            >
            <LinearLayout
                android:id="@+id/layFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/txtAddress"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/txtFrom"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:selectAllOnFocus="true"
                        android:background="@null"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        app:met_clearButton="true"
                        app:met_underlineColor="@color/colorGreen"
                        />
                    <RelativeLayout
                        android:id="@+id/btnDeleteFrom"
                        android:layout_marginRight="5dp"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_erase" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutSuggestion"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/layoutfillForm"
        android:background="#ffffff"
        android:visibility="gone"
        >
        <ListView
            android:id="@+id/lvSuggestion"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:dividerHeight="0dp"
            android:divider="#00000000"
            android:visibility="gone"
            >
        </ListView>
        <FrameLayout
            android:id="@+id/itemCurrent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="visible"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:id="@+id/layoutCategory">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="#00ffffff"
                    android:id="@+id/childContentListLayout" >




                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="18dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="13dp"
                        android:id="@+id/contentListDescTop"
                        android:layout_alignRight="@+id/contentListDescCenter"
                        android:layout_alignEnd="@+id/contentListDescCenter">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pakai lokasi sekarang"
                            android:textColor="#000000"
                            android:layout_marginLeft="20dp"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:id="@+id/txtLabelCurrent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contentListDescTop"
                        android:orientation="horizontal"
                        android:id="@+id/contentListDescCenter">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtAddressCurrent"
                            android:text="-"
                            android:textColor="#98abb2b5"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:ellipsize="end"
                            />


                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d1d1d1"

                    />


            </LinearLayout>

        </FrameLayout>
        <ProgressBar
            android:id="@+id/progressSuggestion"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            />

    </RelativeLayout>


</RelativeLayout>
